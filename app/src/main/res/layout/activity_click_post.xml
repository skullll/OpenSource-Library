<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClickPostActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
             android:id="@+id/click_post_title"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Post Title"
             android:layout_marginTop="30dp"
             android:textStyle="bold"
             android:textSize="35sp"
             android:textColor="#000000"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

            </TextView>

    <ImageView
        android:id="@+id/click_post_image"
        android:layout_marginTop="20dp"
        android:layout_width="375dp"
        android:layout_height="375dp"
        app:srcCompat="@drawable/select_image"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/click_post_title">
    </ImageView>

     <TextView
         android:id="@+id/click_post_descp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Post Description"
         android:layout_marginTop="30dp"
         android:textSize="22sp"
         android:padding="8dp"
         android:background="@drawable/textviewbg"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_below="@id/click_post_image"
         android:textColor="#000000"
         android:textColorLink="#2937ff"
         android:textIsSelectable="true"
         android:autoLink="all">

     </TextView>

    </RelativeLayout>
    </ScrollView>
</RelativeLayout>